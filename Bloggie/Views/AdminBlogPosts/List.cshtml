@using Bloggie.Webb.Models.Domain
@Model List<Bloggie.Webb.Models.Domain.BlogPosts>
@{
}
<div class="bg-secondary bg-opacity-10  py-2">
    <div class="container">
        <h1>List All Blogs - Add Blog Functionality</h1>
    </div>
</div>
<div class="container">
    <table class="table">
        <thead>
            <tr>
                    <th>Id</th>
                    <th>Heading</th>
                    <th>Tags</th>
            </tr>
            

        </thead>
        <tbody>
                @foreach( var BlogPost in Model)
                {
                    <tr>
                        <td>@BlogPost.Id</td>
                        <td>@BlogPost.Heading</td>
                        
                        <td>
                            <div class="d-grid">
                                @foreach(var tag in BlogPost.Tags)
                                {
                                  <span class="badge bg-secondary me-1">@tag.Name</span>  
                                }
                            </div>
                        </td>
                        <td>
                            <a asp-area=""
                            asp-controller="AdminBlogPosts"
                            asp-action="Edit"
                            asp-route-id ="@BlogPost.Id">
                            Edit
                        </a>
                        </td>

                    </tr>
                    
          }

        </tbody>

    </table>

</div>