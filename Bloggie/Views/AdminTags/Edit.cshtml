@model Bloggie.Webb.Models.ViewModels.EditTagRequest
<div class="bg-secondary bg-opacity-10  py-2">
    <div class="container">
        <h1>Edit Tag - Edit Tag Functionality</h1>
    </div>
</div>
<div class="container py-5">
    @if (Model != null)
    {
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Id</label>
                <input type="text" class="form-control" id="name" asp-for="Id" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" id="name" asp-for="Name" />
            </div>
            <div class="mb-3">
                <label class="form-label">DisplayName</label>
                <input type="text" class="form-control" id="displayname" asp-for="DisplayName" />
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-dark">UpDate</button>
                <button class="btn btn-danger ms-2 type=submit"
                        asp-area=""
                        asp-controller="AdminTags"
                        asp-action="Delete">
                    Delete
                </button>
            </div>
        </form>
        
    }else
    {
       <p>Tag not found!</p> 
    }
</div>